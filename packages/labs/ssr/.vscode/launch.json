{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "runtimeVersion": "14.4.0",
      "request": "launch",
      "name": "Test: Integration (debug)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/node_modules/.bin/wtr",
      "args": ["--watch"],
      "outFiles": ["${workspaceFolder}/./**/*.js"],
      "runtimeArgs": ["--experimental-vm-modules"],
      "console": "integratedTerminal",
      "env": {
        "BROWSERS": "chromium",
        "MODE": "dev"
      }
    },
    {
      "type": "node",
      "runtimeVersion": "14.4.0",
      "request": "launch",
      "name": "Test: Unit (debug)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/test/all-tests.js",
      "args": ["--debug"],
      "outFiles": ["${workspaceFolder}/./**/*.js"],
      "runtimeArgs": ["--experimental-vm-modules"]
    },
    {
      "type": "node",
      "runtimeVersion": "14.4.0",
      "request": "launch",
      "name": "Demo Server (global)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/demo/global/server.js",
      "outFiles": ["${workspaceFolder}/./**/*.js"],
      "runtimeArgs": ["--experimental-vm-modules"]
    },
    {
      "type": "node",
      "runtimeVersion": "14.4.0",
      "request": "launch",
      "name": "Demo Server (vm-modules)",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/demo/vm-modules/server.js",
      "outFiles": ["${workspaceFolder}/./**/*.js"],
      "runtimeArgs": ["--experimental-vm-modules"]
    }
  ]
}
